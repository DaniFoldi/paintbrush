{
  "name": "paintbrush-ui",
  "version": "0.1.0",
  "description": "A flat UI component library",
  "scripts": {
    "dev": "nuxi dev",
    "build": "nuxi build",
    "start": "node .output/server/index.mjs",
    "lint:watch": "concurrently -t 1000 \"npm run lint:js:watch\" \"npm run lint:css:watch\"",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js:watch": "chokidar \"**/*.{cjs,js,json,ts,vue}\" -i \"{node_modules,.nuxt,.output}/**\" -c \"npm run lint:js -- --fix\"",
    "lint:css:watch": "chokidar \"**/*.{scss,vue}\" -i \"{node_modules,.nuxt,.output}/**\" -c \"npm run lint:css -- --fix\"",
    "lint:js": "eslint --ext .cjs,.js,.ts,.vue --report-unused-disable-directives .",
    "lint:css": "stylelint --rdd --rd --risd \"**/*.{scss,vue}\" \"*.{scss,scss}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DaniFoldi/paintbrush.git"
  },
  "keywords": [
    "component",
    "component library",
    "components",
    "design",
    "frontend",
    "nuxt",
    "nuxt 3",
    "paintbrush",
    "ui",
    "vue",
    "web"
  ],
  "author": "DaniFoldi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DaniFoldi/paintbrush/issues"
  },
  "homepage": "https://github.com/DaniFoldi/paintbrush#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.0.0",
    "eslint": "^8.11.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-nuxt": "^3.2.0",
    "eslint-plugin-rulesdir": "^0.2.1",
    "eslint-plugin-unicorn": "^41.0.0",
    "eslint-plugin-vue": "^8.4.1",
    "globby": "^13.1.1",
    "nuxt3": "latest",
    "postcss-html": "^1.3.0",
    "postcss-scss": "^4.0.3",
    "sass": "^1.49.7",
    "stylelint": "^14.5.0",
    "stylelint-config-html": "^1.0.0",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-config-recommended-vue": "^1.3.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "stylelint-high-performance-animation": "^1.6.0",
    "stylelint-order": "^5.0.0",
    "stylelint-processor-html": "^1.0.0",
    "stylelint-scss": "^4.2.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@fontsource/inter": "^4.5.5",
    "@fontsource/playfair-display": "^4.5.4",
    "@fontsource/raleway": "^4.5.3",
    "highlight.js": "^11.5.0",
    "phosphor-icons": "^1.4.2"
  }
}
